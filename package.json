{
    "name": "@money-on-chain/omoc-decentralized-oracle",
    "version": "1.4.15",
    "description": "Money On Chain Oracles and Beyond Oracle smart contracts",
    "main": "index.js",
    "scripts": {
        "test": "truffle test",
        "prettier": "prettier --write *.{json,js} migrations/**/*.js test/**/*.js contracts/**/*.sol contracts/*.sol",
        "lint:solidity": "solhint -f table  contracts/**/*.sol contracts/*.sol",
        "lint:js": "eslint *.js migrations/**/*.js test/**/*.js",
        "lint": "npm run lint:js && npm run lint:solidity",
        "prettier:solidity": "prettier --write contracts/**/*.sol",
        "compile": "rimraf ./build && truffle compile",
        "postcompile": "node scripts/flat_compile_and_save.js contracts/InfoGetter.sol",
        "premigrate": "mkdir -p build/contracts && node scripts/flat_compile_and_save.js contracts/InfoGetter.sol",
        "release": "standard-version",
        "release_patch": "standard-version --release-as patch",
        "release_minor": "standard-version --release-as minor",
        "release_major": "standard-version --release-as major",
        "coverage": "rimraf ./coverage && truffle run coverage",
        "commit": "git-cz",
        "deploy": "rimraf .openzeppelin ./build/contracts && truffle migrate",
        "migrate": "truffle migrate"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/money-on-chain/OMoC-Decentralized-Oracle.git"
    },
    "author": "",
    "license": "",
    "bugs": {
        "url": "https://github.com/money-on-chain/OMoC-Decentralized-Oracle.git/issues"
    },
    "homepage": "https://github.com/money-on-chain/OMoC-Decentralized-Oracle.git#readme",
    "devDependencies": {
        "@coinfabrik/solidity-flattener": "^0.0.7",
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@openzeppelin/cli": "^2.8.2",
        "@openzeppelin/contracts-ethereum-package": "^3.0.0",
        "@openzeppelin/test-helpers": "^0.5.6",
        "@truffle/artifactor": "^4.0.103",
        "@truffle/compile-common": "^0.7.3",
        "@truffle/compile-solidity": "^5.3.0",
        "@truffle/config": "^1.2.38",
        "@truffle/hdwallet-provider": "^1.3.0",
        "commitizen": "^4.1.2",
        "cz-conventional-changelog": "^3.2.0",
        "dotenv": "^8.2.0",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.2.0",
        "eslint-config-standard": "^16.0.2",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-standard": "^5.0.0",
        "eslint-plugin-truffle": "^0.3.1",
        "eth-gas-reporter": "^0.2.22",
        "ganache-cli": "^6.9.1",
        "husky": "^6.0.0",
        "lint-staged": "^10.2.11",
        "nyc": "^15.1.0",
        "prettier": "^2.0.5",
        "prettier-plugin-solidity": "^1.0.0-alpha.54",
        "rimraf": "^3.0.2",
        "solc": "^0.8.4",
        "solhint": "^3.1.0",
        "solidity-coverage": "^0.7.9",
        "standard-version": "^9.2.0",
        "truffle": "^5.3.3"
    },
    "dependencies": {
        "@money-on-chain/omoc-sc-shared": "^1.4.26",
        "ganache-core": "^2.13.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-commit": "git update-index --again",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "test/**/*.js": "eslint --fix",
        "migrations/**/*.js": "eslint --fix",
        "contracts/**/*.sol": "solhint",
        "*.{js,css,md,json,sol}": "prettier --write"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 100,
        "singleQuote": true,
        "trailingComma": "all",
        "semi": true,
        "overrides": [
            {
                "files": "*.sol",
                "options": {
                    "singleQuote": false
                }
            }
        ]
    },
    "eslintConfig": {
        "env": {
            "commonjs": true,
            "es2020": true,
            "node": true,
            "mocha": true,
            "truffle/globals": true
        },
        "plugins": [
            "truffle"
        ],
        "extends": [
            "standard",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 11
        },
        "rules": {},
        "overrides": [
            {
                "files": [
                    "test/**/*.js"
                ],
                "rules": {
                    "no-unused-expressions": "off"
                }
            }
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "files": [
        "/build/contracts/*Change.json",
        "/build/contracts/CalculatedPriceProvider.json",
        "/build/contracts/CoinPairPrice.json",
        "/build/contracts/CoinPairPriceFree.json",
        "/build/contracts/DelayMachine.json",
        "/build/contracts/InfoGetter.json",
        "/build/contracts/InfoGetterFlat.json",
        "/build/contracts/OracleManager.json",
        "/build/contracts/PriceProviderRegister.json",
        "/build/contracts/Staking.json",
        "/build/contracts/Supporters.json",
        "/build/contracts/OracleManagerPairChange.json",
        "/build/contracts/PriceProviderOracleManagerRegisterPairChange.json",
        "/build/contracts/CoinPairPriceAddCalculatedPriceProviderChange.json",
        "/build/contracts/PriceProviderRegisterPairChange.json",
        "/migrations"
    ]
}
